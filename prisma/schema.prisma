generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Account {
  id        Int        @id @default(autoincrement())
  address   String
  contracts Contract[] // list of contracts deployed to the account
}

model Contract {
  id Int @id @default(autoincrement())

  name         String
  code         ContractCode[] @relation("imports")
  tags         Tag[]
  ContractCode ContractCode[]
  Account      Account?       @relation(fields: [accountId], references: [id])
  accountId    Int?
  interactions Int            @default(0)
}

model ContractCode {
  id         Int       @id @default(autoincrement())
  Contract   Contract? @relation(fields: [contractId], references: [id])
  contractId Int?

  cadence     String     @db.LongText
  comments    Comment[]
  imports     Contract[] @relation("imports")
  lastUpdated DateTime?
}

model Comment {
  id Int @id @default(autoincrement())

  lineStart      Int
  lineEnd        Int
  content        String
  ContractCode   ContractCode? @relation(fields: [contractCodeId], references: [id])
  contractCodeId Int
}

model Tag {
  id        Int        @id @default(autoincrement())
  name      String
  contracts Contract[]
}