generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Contract {
  id           Int       @id @default(autoincrement())
  cadence      String    @db.LongText
  interactions Int       @default(0)
  comments     Comment[]
  tags         Tag[]

  location  Location?
  importsId Int?
}

model Location {
  contract   Contract @relation(fields: [contractId], references: [id])
  contractId Int      @unique

  name    String
  address String

  // Import related relations
  import        Import? @relation(fields: [importName, importAddress], references: [name, address])
  importName    String?
  importAddress String?

  @@id(name: "location", [name, address])
}

model Import {
  name    String
  address String
  imports Location[]

  @@id(name: "core", [name, address])
}

model Comment {
  id Int @id @default(autoincrement())

  lineStart  Int
  lineEnd    Int
  content    String
  Contract   Contract? @relation(fields: [contractId], references: [id])
  contractId Int?
}

model Tag {
  id         Int       @id @default(autoincrement())
  name       String
  Contract   Contract? @relation(fields: [contractId], references: [id])
  contractId Int?
}
